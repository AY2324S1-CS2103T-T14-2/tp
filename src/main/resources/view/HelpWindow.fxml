<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>
<?import java.net.URL?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.Region?>
<fx:root resizable="false" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>

      <AnchorPane> <!-- Using an AnchorPane to position the components -->
        <!-- Setting the customTitleBar at the top of the AnchorPane -->
        <HBox alignment="CENTER_RIGHT" fx:id="customTitleBar" style="-fx-background-color: #3C4EEF;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <Label text="  ? Help" style="-fx-text-fill: #B9CCFF;" />

          <!-- Spacing between "?" and title -->
          <Region HBox.hgrow="ALWAYS"></Region>

          <Label text="Advanced&amp;Efficient" style="-fx-text-fill: #B9CCFF;" />

          <!-- Spacing between title and buttons -->
          <Region minWidth="10"></Region>

          <Button fx:id="minimizeButton" text="-" onAction="#minimizeWindow" />
          <Button fx:id="closeButton" text="X" onAction="#closeWindow" />
        </HBox>

        <!-- Position the helpMessageContainer below the customTitleBar -->
        <HBox alignment="CENTER" fx:id="helpMessageContainer" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="25.0">
          <children>
            <Label fx:id="helpMessage" text="Label">
              <HBox.margin>
                <Insets right="5.0" />
              </HBox.margin>
            </Label>
            <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
              <HBox.margin>
                <Insets left="5.0" />
              </HBox.margin>
            </Button>
          </children>
          <opaqueInsets>
            <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
          </opaqueInsets>
          <padding>
            <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
          </padding>
        </HBox>
      </AnchorPane>
    </Scene>
  </scene>
</fx:root>
